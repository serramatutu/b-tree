{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build file debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", "-o", "./bin/a.out", "--std=c++11", "-I", "${workspaceFolder}/include", "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build file clean",
            "type": "shell",
            "command": "g++",
            "args": [
                "-o", "./bin/a.out", "--std=c++11", "-I/${workspaceFolder}/include", "${file}"
            ],
            "group": "build"
        }
    ]
}